--工程名字
PROJECT_NAME = "llog"

--目标名字
TARGET_NAME = "llog"

--工程类型：static/dynamic/exe
PROJECT_TYPE = "dynamic"

--标准库版本
---std=gnu99/-std=c++11/-std=c++14/
STDC = "-std=c++17"

--需要的FLAGS
FLAGS = {
	"Wno-sign-compare"
}

--需要的include目录
INCLUDES = {
	"../lua/lua"
}

--需要连接的库文件
--gcc9.1前filesystem需要链接stdc++fs
LIBS = {
	"lua",
	"stdc++fs"
}

--依赖项目
DEPS = {
	"lualib"
}